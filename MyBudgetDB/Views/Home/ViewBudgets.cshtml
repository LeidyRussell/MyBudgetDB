@model IEnumerable<MyBudgetDB.Models.BudgetCommands.UserBudgetBrief>

@{
    ViewData["Title"] = "Budgets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).InitAmount)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.ElementAt(0).Balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ElementAt(0).CreationDate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => item.InitAmount)
                    </th>
                    @{
                        var initAmt = item.InitAmount;
                        var total = 0.0;
                        var fnBalance = 0.0;

                        foreach (var element in item.Expenses)
                        {
                            fnBalance += element.Amount;
                        }

                        total = initAmt - fnBalance;
                    }
                    <td>
                            @total
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        <a asp-action="View" asp-route-id="@item.Id" class="btn">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Create" class="btn btn-success">Create New Person</a>
